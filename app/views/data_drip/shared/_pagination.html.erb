<% if pagination[:total_pages] > 1 %>
  <% additional_params ||= {} %>
  <div class="mt-6 flex justify-between items-center">
    <div class="text-sm text-gray-500">
      Showing <%= (pagination[:current_page] - 1) * pagination[:per_page] + 1 %>-<%= [pagination[:current_page] * pagination[:per_page], pagination[:total_count]].min %> 
      of <%= pagination[:total_count] %> <%= item_name %>
    </div>
    
    <div class="flex space-x-2">
      <% if pagination[:has_previous_page] %>
        <%= link_to "← Previous", url_for(additional_params.merge(page_param => pagination[:previous_page])), 
            class: "px-3 py-2 text-sm bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
      <% end %>
      
      <% pagination[:page_range].each do |page_num| %>
        <% if page_num == pagination[:current_page] %>
          <span class="px-3 py-2 text-sm pagination-current rounded"><%= page_num %></span>
        <% else %>
          <%= link_to page_num, url_for(additional_params.merge(page_param => page_num)), 
              class: "px-3 py-2 text-sm bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
        <% end %>
      <% end %>
      
      <% if pagination[:has_next_page] %>
        <%= link_to "Next →", url_for(additional_params.merge(page_param => pagination[:next_page])), 
            class: "px-3 py-2 text-sm bg-gray-100 text-gray-700 rounded hover:bg-gray-200" %>
      <% end %>
    </div>
  </div>
<% end %>
