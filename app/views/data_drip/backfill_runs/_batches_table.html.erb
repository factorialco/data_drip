<% backfill_run.batches.each do |batch| %>
  <tr class="border-b border-gray-100 last:border-b-0">
    <td class="py-3 px-4 text-gray-700 align-middle"><%= status_tag(batch.status) %></td>
    <td class="py-3 px-4 text-gray-700 align-middle"><%= batch.batch_size %></td>
    <td class="py-3 px-4 text-red-700 align-middle"><%= batch.error_message %></td>
  </tr>
<% end %>
